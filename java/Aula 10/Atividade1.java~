{
  int[] vetor=new int[6];
  int soma=0;
  int soma1=0;

    for(int i=0; i<6; i++)
    {
      vetor[i]=Entrada.leiaInt("Digite seis numeros");
    }
    for(int i=0; i<6; i++)
     {
       if (vetor[i]%2==0)
       {
         System.out.println("Numeros pares:"+vetor[i]);
     }else
        System.out.println("Numeros impares:"+vetor[i]);
      System.out.println("----------------------");
     }
    for(int i=0; i<6; i++)
    {
     if(vetor[i]%2==0)
     {
       System.out.println("o numero:"+i+" e par");
     }else
