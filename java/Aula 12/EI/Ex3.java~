public class Ex3 {
  public static  void main (String args[]) {
    double media,soma; 
    int cont;
    media=0.0;
    soma=0.0;
    double[] temp = new double[7];
    
    for (int i=0; i < 7; i++)
          {
               temp[i] = Entrada.leiaDouble();
               soma=soma+temp[i];
          }
          media=soma/7;
   
        cont=0; 
    for (int i=0; i < 7; i++)
          {    
    if (temp[i]>media) {
      cont++;
     
    }
    }
    for (int i=0; i < 7; i++)
          {    
    System.out.println(temp[i]);
     
    }
    System.out.println("M?dia de temp:"+media);
    System.out.println("num de temp acima da m?dia:"+cont);
    
    }
    }