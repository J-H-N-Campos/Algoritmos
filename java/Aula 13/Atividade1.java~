public class Atividade1
{
  public static void main (String[] args)
  {
    
    int[] vetor=new int[7];
    int media=0;
    
    for(int i=0; i<7; i++)
    {
      vetor[i]=Entrada.leiaInt("Digite a temperatura:");
      System.out.println("a temperatura e:"+vetor[i]);
      media=(vetor[i]/7);
      System.out.println("a media e:"+media);
      System.out.println("---------------------------------");      
    }
    for(int i=0; i<7; i++)
    {
      if (media<vetor[i])
      {
        System.out.println("os valores estao acima da media");
      }else
        System.out.println("os valores nao estao acima da media");
      System.out.println("------------------------------");

}
}
}
    
      
      
    
    